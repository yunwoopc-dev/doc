{
  "metadata": [
    {
      "src": [
        {
          "src": "./",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "doc/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "doc/{문서 이름을 입력하세요}",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "{문서 이름을 입력하세요}",
      "_appTitle": "{문서 이름을 입력하세요}",
      "_enableSearch": true,
      "pdf": true
    }
  }
}