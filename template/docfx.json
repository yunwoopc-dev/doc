{
  "metadata": [
    {
      "src": [
        {
          "src": "./",
          "files": [
            "**/*.csproj",
			"**/Sample.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "./**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "{문서 Repository 경로}/{프로젝트 이름}",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "{프로젝트 이름}",
      "_appTitle": "{프로젝트 이름}",
      "_enableSearch": true,
      "pdf": true
    }
  }
}